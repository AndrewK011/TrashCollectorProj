@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "Suspend Pickup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Suspend Pickup</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="IdentityUserId" />
            <input type="hidden" asp-for="IdentityUser.UserName" />
            <input type="hidden" asp-for="FirstName" />
            <input type="hidden" asp-for="LastName" />
            <input type="hidden" asp-for="Address" />
            <input type="hidden" asp-for="ZipCode" />
            <input type="hidden" asp-for="PickupDay" />
            <input type="hidden" asp-for="OneTimePickup" />
            <input type="hidden" asp-for="OneTimePickupUsed" />
            <div class="form-group">
                <label asp-for="SuspendStart" class="control-label"></label>
                <input asp-for="SuspendStart" class="form-control" />
                <span asp-validation-for="SuspendStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuspendEnd" class="control-label"></label>
                <input asp-for="SuspendEnd" class="form-control" />
                <span asp-validation-for="SuspendEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}